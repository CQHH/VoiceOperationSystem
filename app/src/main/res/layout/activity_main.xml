<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000714">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_new"
        android:layout_centerInParent="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">

        <com.cq.hhxk.voice.voiceoperationsystem.view.WaveView
            android:id="@+id/wave"
            android:layout_width="360dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/speak"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:padding="6dp"/>

    </RelativeLayout>

    <!--<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    </RelativeLayout>
-->

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#562368"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#249537"
        android:layout_below="@id/text1"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#856347"
        android:layout_below="@+id/text1"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/text4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#853792"
        android:layout_below="@id/text3"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/text5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#259742"
        android:layout_below="@id/text4"
        android:visibility="gone"/>

</RelativeLayout>