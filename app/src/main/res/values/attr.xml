<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RadarWaveView">

        <attr name="waveColor" format="color" />

        <attr name="waveAmplitude" format="dimension" />

        <attr name="waveSpeed" format="float" />

        <attr name="waveStartPeriod" format="float" />
        <attr name="waveStart" format="boolean" />

        <attr name="waveFillTop" format="boolean" />
        <attr name="waveFillBottom" format="boolean" />

        <attr name="waveFillType" format="enum">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
        </attr>

        <attr name="waveType" format="enum">
            <enum name="sin" value="0" />
            <enum name="cos" value="1" />
        </attr>

    </declare-styleable>

    <declare-styleable name="ChannelView">
        <attr name="channelHeight" format="dimension" />
        <attr name="channelColumn" format="integer" />
        <attr name="channelPadding" format="dimension" />
        <attr name="channelVerticalSpacing" format="dimension" />
        <attr name="channelHorizontalSpacing" format="dimension" />
        <attr name="channelNormalBackground" format="reference" />
        <attr name="channelEditBackground" format="reference" />
        <attr name="channelFocusedBackground" format="reference" />
        <attr name="channelNormalTextColor" format="color" />
        <attr name="channelFixedCount" format="integer" />
        <attr name="channelFixedTextColor" format="color" />
        <attr name="channelFixedBackground" format="reference" />
        <attr name="channelFocusedTextColor" format="color" />
        <attr name="channelTextSize" format="dimension" />
        <attr name="tipEditBackground" format="reference" />
        <attr name="platesTitleBackground" format="reference" />
        <attr name="tipEditTextColor" format="color" />
        <attr name="platesTitleColor" format="color" />
        <attr name="platesTitleBold" format="boolean" />
        <attr name="tipEditTextSize" format="dimension" />
        <attr name="platesTitleSize" format="dimension" />
        <attr name="platesTitleHeight" format="dimension" />
        <attr name="platesTitleLeftRightPadding" format="dimension" />
        <attr name="otherSubTitleBackground" format="reference" />
        <attr name="otherSubTitleTextColor" format="color" />
        <attr name="otherSubTitleTextSize" format="dimension" />
        <attr name="subTitleBackground" format="reference" />
        <attr name="subTitleTextColor" format="color" />
        <attr name="subTitleTextSize" format="dimension" />
        <attr name="subTitleName" format="string" />
        <attr name="otherSubTitleName" format="string" />
        <attr name="tipFinishBackground" format="reference" />
        <attr name="tipFinishTextColor" format="color" />
        <attr name="tipFinishTextSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MultiScrollNumber">
        <attr name="primary_number" format="integer"/>
        <attr name="target_number" format="integer"/>
        <attr name="number_size" format="integer"/>
        <!--<attr name="number_color" format="color"/>-->
    </declare-styleable>

</resources>